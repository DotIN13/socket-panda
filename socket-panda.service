[Unit]
Description=Socket Panda
After=network.target network-online.target
Requires=network-online.target

[Service]
User=ruby
Group=ruby
ExecStart=/var/lib/ruby/.rbenv/shims/ruby /var/www/socket-panda/panda.rb
TimeoutStopSec=5s
LimitNOFILE=1048576
LimitNPROC=512
PrivateTmp=true
ProtectSystem=full
AmbientCapabilities=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target